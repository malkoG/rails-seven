<% url, method = staffs_petitions_path, :post  %>
<% url, method = staffs_petition_path(@petition), :put if action_name == 'edit' %>


<%= form_for(@petition, url: url) do |f| %>
<table class="ui striped celled table">
  <tbody>
    
      <tr>
        <td class="two wide">
          id
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :id %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          name
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :name %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          birthday
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :birthday %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          email
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :email %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          phone
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :phone %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          code
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :code %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          created_at
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :created_at %>
          </div>
        </td>
      </tr>
    
      <tr>
        <td class="two wide">
          updated_at
        </td>
        <td>
          <div class="ui input">
            <%= f.text_field :updated_at %>
          </div>
        </td>
      </tr>
    
  </tbody>
</table>

<span class="ui" style="float: right;">
  <button class="ui button" type="submit">등록</button>
</span>
<% end %>
