<% content_for :title, "petition ##{@petition.id} | PETNER" %>

<div class="main ui container" style="margin-top: 30px; margin-bottom: 30px;">
  <div class="ui breadcrumb">
    <%= link_to 'Admin', staffs_petitions_path, method: :get, class: "section" %>
    <i class="right angle icon divider"></i>
    <div class="active section">petition</div>
  </div>
  
  <br>

  <h1 class="ui teal image header">petition #<%= @petition.id %></h1>
  <span class="ui teal image header" style="float: right;">
    <%= link_to '수정', edit_staffs_petition_path(@petition.id), method: :get, class: "ui button" %>
    <%= link_to '삭제', staffs_petition_path(@petition.id), method: :delete, class: "ui button" %>
  </span>

  <div class="ui divider"></div>

  <div class="main ui">
    <h3 class="ui header">petition 상세보기</h3>
    <%= render 'petition_info', petition: @petition %>
    <br>
    <%= render 'shared/comments' , comments: @comments, id: @petition.id, createpath: "#{@petition.id}/comments", model: "Petition" %>
  </div>
</div>
